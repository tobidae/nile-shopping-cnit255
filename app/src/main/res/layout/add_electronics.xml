<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Electronics"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/addElectronicsName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Electronics Name"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electronics Condition"
            android:textSize="18dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton android:id="@+id/radioElectronicsNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New" />

            <RadioButton android:id="@+id/radioElectronicsUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Used" />
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electronics Manufacturer"
            android:textSize="18dp" />
        <Spinner
            android:id="@+id/addElectronicsManufacturer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electronics Type"
            android:textSize="18dp" />
        <Spinner
            android:id="@+id/addElectronicsType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />
        <EditText
            android:id="@+id/addElectronicsPrice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Price ($$$)"
            android:inputType="number" />
        <EditText
            android:id="@+id/addElectronicsQuantity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Quantity"
            android:inputType="number" />

        <Button
            android:id="@+id/btnAddElectronics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Electronics"/>
    </LinearLayout>
</LinearLayout>