<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Seller"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/addSellerBusinessName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Business Name"
            android:inputType="text" />
        <EditText
            android:id="@+id/addSellerPhoneNo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Phone Number"
            android:inputType="phone" />
        <EditText
            android:id="@+id/addSellerEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/addSellerAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Business Address"
            android:inputType="textPostalAddress" />
        <EditText
            android:id="@+id/addSellerCity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="City"
            android:inputType="text" />
        <EditText
            android:id="@+id/addSellerState"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="State"
            android:inputType="text" />
        <EditText
            android:id="@+id/addSellerZipCode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Zip Code"
            android:inputType="number" />

        <Button
            android:id="@+id/btnAddSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Seller"/>
    </LinearLayout>
</LinearLayout>